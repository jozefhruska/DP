{
  "name": "pfpp",
  "version": "1.0.0",
  "description": "A simple extension protecting against passive fingerprinting through HTTP headers.",
  "displayName": "Passive fingerprinting protection",
  "author": "Jozef Hruska <me@jozefhruska.com>",
  "scripts": {
    "build:chrome": "NODE_ENV=production BUILD_TARGET=chrome vite build",
    "build:firefox": "NODE_ENV=production BUILD_TARGET=firefox vite build",
    "watch": "vite build --watch --mode development --minify false",
    "dev": "vite",
    "serve:firefox": "web-ext run --config=./webext.config.js --start-url \"https://www.whatismybrowser.com/detect/what-http-headers-is-my-browser-sending\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run --config=./webext.config.js -t chromium --start-url \"https://www.whatismybrowser.com/detect/what-http-headers-is-my-browser-sending\" --source-dir ./dist/",
    "test": "vitest"
  },
  "dependencies": {
    "@radix-ui/react-label": "~2.0.1",
    "@radix-ui/react-select": "~1.2.1",
    "@radix-ui/react-slider": "~1.1.1",
    "@radix-ui/react-switch": "~1.0.2",
    "@radix-ui/react-tabs": "~1.0.3",
    "clsx": "~1.2.1",
    "lucide-react": "~0.125.0",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "webextension-polyfill": "~0.10.0",
    "zustand": "~4.3.7"
  },
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "~4.1.0",
    "@tailwindcss/forms": "~0.5.3",
    "@types/chrome": "~0.0.234",
    "@types/react": "~18.2.0",
    "@types/react-dom": "~18.2.1",
    "@types/webextension-polyfill": "~0.10.0",
    "@vitejs/plugin-react": "~3.1.0",
    "autoprefixer": "~10.4.14",
    "axios": "~1.4.0",
    "happy-dom": "~9.10.0",
    "postcss": "~8.4.23",
    "postcss-import": "~15.1.0",
    "prettier": "~2.8.8",
    "prettier-plugin-tailwindcss": "~0.2.8",
    "tailwindcss": "~3.3.2",
    "tailwindcss-animate": "~1.0.5",
    "typescript": "~4.9.5",
    "user-agent-data-types": "~0.3.1",
    "vite": "~4.3.3",
    "vitest": "~0.30.1",
    "web-ext": "~7.6.2"
  }
}
